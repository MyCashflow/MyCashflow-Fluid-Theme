<?xml version="1.0"?>
<Theme>
	<Version>20240919</Version>
	<ImageSizes>
		<Mini width="120" height="120" />
		<Normal width="800" height="800" />
		<Big width="1200" height="1200" />
		<ListMobile width="300" height="300" />
		<ListDesktop width="600" height="600" />
		<BannerWideMobile width="600" />
		<BannerWideDesktop width="1600" />
	</ImageSizes>
	<Features>
		<Checkout>
			<SinglePage supported="true" default="default" />
			<MultiPage supported="false" />
		</Checkout>
		<VatFree supported="true" />
		<GiftCards supported="true" />
		<ProductBundles supported="true" />
		<ProductListFilters supported="true" />
		<BrandProductListFilters supported="true" />
		<CampaignProductListFilters supported="true" />
	</Features>
	<Settings>
		<Doctype standard="HTML5" />
		<ProductList>
			<PageSizes>
				<PageSize>60</PageSize>
				<PageSize>120</PageSize>
			</PageSizes>
		</ProductList>
	</Settings>
	<ThemeSettings>
		<SettingGroup label="heading_color_settings">
			<Setting type="color" name="primary_color" label="primary_color" description="primary_color_description" default="#378940" />
			<Setting type="color" name="background_color_notification_bar" label="background_color_notification_bar" description="background_color_notification_bar_description" default="#333333" />
		</SettingGroup>
		<SettingGroup label="heading_homepage_settings">
			<Setting type="select" name="homepage_mainbanner_autoplay" label="homepage_mainbanner_autoplay" description="homepage_mainbanner_autoplay_description" default="false">
				<Option value="false" label="homepage_mainbanner_autoplay_false" />
				<Option value="3000" label="homepage_mainbanner_autoplay_3" />
				<Option value="4000" label="homepage_mainbanner_autoplay_4" />
				<Option value="5000" label="homepage_mainbanner_autoplay_5" />
				<Option value="6000" label="homepage_mainbanner_autoplay_6" />
				<Option value="7000" label="homepage_mainbanner_autoplay_7" />
				<Option value="8000" label="homepage_mainbanner_autoplay_8" />
			</Setting>
		</SettingGroup>
		<SettingGroup label="heading_product_page_settings">
			<Setting type="select" name="product_variations_style" label="product_variations_style" description="product_variations_style_description" default="radio">
				<Option value="radio" label="product_variations_style_radio" />
				<Option value="select" label="product_variations_style_select" />
			</Setting>
		</SettingGroup>
		<SettingGroup label="heading_payment_and_shipping_badges_settings" description="heading_payment_and_shipping_badges_settings_description">
			<Setting type="select" name="checkout_badge_mode" label="checkout_badge_mode" default="Normal">
				<Option value="Normal" label="checkout_badge_mode_normal" />
				<Option value="SingleColor" label="checkout_badge_mode_single_color" />
			</Setting>
			<Setting type="boolean" name="show_badge_paytrail_banks" label="show_badge_paytrail_banks" default="false"></Setting>
			<Setting type="boolean" name="show_badge_mobilepay" label="show_badge_mobilepay" default="false"></Setting>
			<Setting type="boolean" name="show_badge_apple_pay" label="show_badge_apple_pay" default="false"></Setting>
			<Setting type="boolean" name="show_badge_visa" label="show_badge_visa" default="false"></Setting>
			<Setting type="boolean" name="show_badge_mastercard" label="show_badge_mastercard" default="false"></Setting>
			<Setting type="boolean" name="show_badge_amex" label="show_badge_amex" default="false"></Setting>
			<Setting type="boolean" name="show_badge_paypal" label="show_badge_paypal" default="false"></Setting>
			<Setting type="boolean" name="show_badge_klarna" label="show_badge_klarna" default="false"></Setting>
			<Setting type="boolean" name="show_badge_posti" label="show_badge_posti" default="false"></Setting>
			<Setting type="boolean" name="show_badge_matkahuolto" label="show_badge_matkahuolto" default="false"></Setting>
			<Setting type="boolean" name="show_badge_postnord" label="show_badge_postnord" default="false"></Setting>
			<Setting type="boolean" name="show_badge_db_schenker" label="show_badge_db_schenker" default="false"></Setting>
			<Setting type="boolean" name="show_badge_budbee" label="show_badge_budbee" default="false"></Setting>
			<Setting type="boolean" name="show_badge_dhl" label="show_badge_dhl" default="false"></Setting>
			<Setting type="boolean" name="show_badge_gls" label="show_badge_gls" default="false"></Setting>
		</SettingGroup>
		<SettingGroup label="heading_klarna_osm_settings" description="heading_klarna_osm_settings_description">
			<Setting type="boolean" name="klarna_osm_footer" label="klarna_osm_footer" description="klarna_osm_footer_description" default="false"></Setting>
			<Setting type="boolean" name="klarna_osm_homepage" label="klarna_osm_homepage" description="klarna_osm_homepage_description" default="false"></Setting>
			<Setting type="boolean" name="klarna_osm_minicart" label="klarna_osm_minicart" description="klarna_osm_minicart_description" default="false"></Setting>
			<Setting type="boolean" name="klarna_osm_product" label="klarna_osm_product" description="klarna_osm_product_description" default="false"></Setting>
			<Setting type="boolean" name="klarna_osm_productlist" label="klarna_osm_productlist" description="klarna_osm_productlist_description" default="false"></Setting>
		</SettingGroup> 
	</ThemeSettings>
	<Setup>
		<BannerGroups>
			<BannerGroup label="bannergroup_frontpage_main" code="frontpage-main" />
			<BannerGroup label="bannergroup_frontpage_featured" code="frontpage-featured" />
			<BannerGroup label="bannergroup_notification_bar" code="notification-bar" />
			<BannerGroup label="bannergroup_social_media_buttons" code="social-media-buttons" />
			<BannerGroup label="bannergroup_payment_buttons" code="payment-buttons" />
			<BannerGroup label="bannergroup_logistics_buttons" code="logistics-buttons" />
		</BannerGroups>
	</Setup>
</Theme>
